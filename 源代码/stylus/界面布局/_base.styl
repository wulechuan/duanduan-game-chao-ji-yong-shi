html {
    font-size: 20px;
}

body {
    margin: 0;
}

html, body {
    height 100%
}

.author-wishes,
.app {
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    margin 0
    padding 0
    width auto
    height auto
    overflow hidden
}

.app {
    z-index 2
}

.author-wishes {
    z-index 1
}
