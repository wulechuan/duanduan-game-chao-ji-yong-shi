.keyboard-tip-container {
    flex 0 0
    display: flex
    flex-direction: column
    justify-content: space-between
    align-items: center

    position relative
    min-width 3em
    height: 4.5em

    &.label-lays-below-hint {
        flex-direction: column-reverse
    }
}

.keyboard-tip,
.keyboard-tip-label {
    text-align center
}

.keyboard-tip-label {
    overflow hidden
    top 0
    bottom auto

    font-size 0.8em
    padding: 0.2em 0.5em
    width auto
    height 1.5em
    line-height 1.5
    border-radius 0.25em

    color white
    border 1px solid rgba(white, 0.219)
    background-color rgba(black, 0.9)
}

.keyboard-tip {
    font-size 1.2em

    box-sizing border-box
    border 0.25em double black
    padding 0 0.35em
    min-width  2.2em
    height 2.2em
    line-height 1.65
    border-radius 0.3em

    top auto
    bottom 0

    text-align: center

    background-color: white
}
