.role,
.role-candidate {
    position: absolute;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
}

.player-2 .role-candidate,
.role.player-2 {
    transform: scaleX(-1);
}

.role {
    width: 30rem;
    height: 30rem;
    top: 6rem;

    z-index: 5;

    
    &.player-1 {
        left: 2rem;
    }

    &.player-2 {
        right: 2rem;
    }

    &.is-attacking {
        z-index: 6;
    }

    &.has-lost {
        opacity: 0.6;
        filter: grayscale(0.8);
    }
}
