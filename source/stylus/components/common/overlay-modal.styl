.overlay-modal {
    z-index 300

    position fixed
    top 0
    left 0
    right 0
    bottom 0
    margin 0
    padding 0
    width auto
    height auto

    .modal,
    .backdrop {
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        margin auto
        padding 0
    }

    .backdrop {
        z-index 0

        width auto
        height auto
        background-color rgba(black, 0.66)
    }

    .modal {
        z-index 20

        width 18rem
        height 10rem

        display flex
        flex-direction: column
        justify-content: center
        align-items: center

        border-radius: 1rem

        color: black
        border: 0.36rem double white
        background-color: rgba(black, 0.51)
        box-shadow: 0 0 1rem rgba(black, 0.219)

        animation overlay-modal-modal-enter 0.28s ease-out forwards
    }

    &.is-leaving {

        .backdrop {
            animation overlay-modal-backdrop-fading-out 0.3s ease-out forwards
        }

        .modal {
            animation-name: overlay-modal-modal-leave
        }
    }

    @keyframes overlay-modal-backdrop-fading-out {
        0%   { opacity: 1; }
        100% { opacity: 0;   }
    }

    @keyframes overlay-modal-modal-enter {
        0% {
            opacity: 0;
            transform: scale(0.1);
        }
        100% {
            opacity: 1;
            transform: none;
        }
    }

    @keyframes overlay-modal-modal-leave {
        0% {
            opacity: 1;
            transform: none;
        }
        100% {
            opacity: 0;
            transform: translateY(-319%);
        }
    }

    .title {
        font-size: 2rem
        font-weight: 600
        letter-spacing: 0.1em
        margin-top: 1rem
        text-stroke: 1px white
        -webkit-text-stroke: @text-stroke
    }

    .content {
        font-size: 1.2rem
        font-weight: 600
        margin-bottom: 0.8rem
        text-stroke: 0.5px rgba(white, 0.87)
        -webkit-text-stroke: @text-stroke
    }
}
