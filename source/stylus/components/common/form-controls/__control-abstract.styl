.form {
    font-size: 1rem
}

.form-controls-row {
    display block
    margin 1em auto
}

.form-control {
    display inline-flex
    flex-wrap: wrap
    align-items: center
    padding: 0 0.5em

    &:focus-within {
        outline 3px solid black
    }

    &:not(.is-disabled ):hover {
        background-color: rgba(black, 0.1)
    }

    input {
        border 1px solid transparent

        &:not([type="checkbox"]):not([type="radio"]) {
            border-bottom-color black
        }
    }

    > label {
        cursor pointer
    }

    > .label,
    > .description,
    > .the-control {
        display block
    }

    > .the-control {
        flex 0 0
        margin 0 .25em 0 0
        min-width 10em
        font-size inherit
        outline none
    }

    > .label,
    > .description {
        padding 0.1em 0.25em
        line-height 1.5
    }

    &.has-dual-labels {

        > .label-1 {
            margin-left -0.25em
        }

        > .label-2 {

        }
    }

    > .label {
        min-width 1em
        color black
    }

    .description {
        font-size: 80%
        flex 1 0
        min-width calc(100% - 2em)
        margin 0 0 0 1em

        p {
            margin 0.1em 0
        }
    }

    &.has-description {

        > .label {
            flex 1 0
            min-width 60%
        }
    }

    &.is-disabled {

        .description,
        > .label,
        > .the-control {
            cursor not-allowed
        }

        .description,
        > .label {
            color #ccc
            font-style italic
        }
    }
}
