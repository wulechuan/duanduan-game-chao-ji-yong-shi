.form-controls-row {
    display block
    margin 1em auto
}

.form-control {
    display inline-flex
    flex-wrap: wrap
    align-items: center
    padding: 0 0.5em

    &:not(.is-disabled ):hover {
        background-color: rgba(black, 0.1)
    }

    > label,
    > .description,
    > .the-control {
        display block
    }

    > .the-control {
        flex 0 0
        margin 0
        min-width 10em
        font-size inherit
    }

    > label,
    > .description {
        padding 0.1em 0.5em
        line-height 1.5
    }

    &.has-dual-labels {

        > .label-1 {
            margin-left -0.5em
        }

        > .label-2 {

        }
    }

    > label {
        min-width 1em
        color black
        cursor pointer
    }

    .description {
        flex 1 1
        min-width 100%
        margin 0 0 0 1em
    }

    &.has-description {

        > label {
            min-width 100%
        }
    }

    &.is-disabled {

        .description,
        > label,
        > .the-control {
            cursor not-allowed
        }

        .description,
        > label {
            color #ccc
            font-style italic
        }
    }
}
