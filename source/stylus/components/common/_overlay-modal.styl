.overlay-modal {
    z-index 300

    position fixed
    top 0
    left 0
    right 0
    bottom 0
    margin 0
    padding 0
    width auto
    height auto

    .modal,
    .backdrop {
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        margin auto
        padding 0
    }

    .backdrop {
        z-index 0

        width auto
        height auto
        background-color rgba(black, 0.66)
        -webkit-backdrop-filter: blur(0.2rem)
        backdrop-filter: blur(0.2rem)
    }

    .modal {
        z-index 20

        padding: 0.5rem

        max-width  80%
        max-height 80%

        width 16rem
        height 12rem

        display flex
        flex-direction: column
        justify-content: center
        align-items: center

        border-radius: 1rem

        -webkit-backdrop-filter: blur(0.5rem)
        backdrop-filter: blur(0.5rem)

        color: black
        border: 0.36rem double white
        background-color: rgba(black, 0.51)
        box-shadow: 0 0 1rem rgba(black, 0.219)

        animation overlay-modal-modal-enter 0.28s ease-out forwards
    }

    &.is-leaving {

        .backdrop {
            animation overlay-modal-backdrop-fading-out 0.3s ease-out forwards
        }

        .modal {
            animation-name: overlay-modal-modal-leave
        }
    }

    @keyframes overlay-modal-backdrop-fading-out {
        0%   { opacity: 1; }
        100% { opacity: 0;   }
    }

    @keyframes overlay-modal-modal-enter {
        0% {
            opacity: 0;
            transform: scale(0.1);
        }
        100% {
            opacity: 1;
            transform: none;
        }
    }

    @keyframes overlay-modal-modal-leave {
        0% {
            opacity: 1;
            transform: none;
        }
        100% {
            opacity: 0;
            transform: translateY(-319%);
        }
    }

    .title {
        font-size: 2rem
        font-weight: 600
        letter-spacing: 0.1em
        margin: 1.5rem 0 0 0
        text-stroke: 1px white
        -webkit-text-stroke: @text-stroke
    }

    > .content {
        font-size: 1.2rem
        font-weight: 600
        margin: 1rem 0
        text-stroke: 0.5px rgba(white, 0.87)
        -webkit-text-stroke: @text-stroke
    }

    .count-down {
        font-size: 1rem
        height 2em
        font-weight: 400
        margin: 0 0 1rem 0
        color white
        // text-stroke: 0.5px rgba(white, 0.87)
        // -webkit-text-stroke: @text-stroke

        display flex
        justify-content: space-around
        align-items: center

        .count-down-tip {
            margin-left: 0
            margin-right: 0.5em
        }

        .count-down-number {
            font-size: 150%
            width: 1em
            padding: 0
            text-align: center
        }
    }


    .modal:not(.huge) {
        
        .content p {
            line-height: 1.6
            margin: 0.2em
        }
    }

    .modal.huge {
        box-sizing: border-box
        width: 900px
        height: 750px
        padding: 1rem 0.5rem
        border-radius: 0.5rem
        border: 0.3rem solid black;
        background-color: rgba(white, 1)
        box-shadow: 0 0 0 0.3rem white

        -webkit-backdrop-filter: none
        backdrop-filter: none

        .title {
            font-size: 1.6rem
            font-weight: 500
            letter-spacing: 0.1em
            text-stroke: 0
            -webkit-text-stroke: 0
            margin: 0.5rem auto
        }

        > .content {
            overflow auto
            padding: 0.25rem 1rem 2.75rem 1rem
            margin: 0.5rem auto
            font-size: 0.9rem
            font-weight: normal
            text-stroke: 0
            -webkit-text-stroke: 0
        }
    }

    &.is-leaving {

        .modal.huge {
            animation-name: overlay-modal-huge-modal-leave
        }
    }

    @keyframes overlay-modal-huge-modal-leave {
        0% {
            opacity: 1;
            transform: none;
        }
        67% {
            opacity: 0.7;
            transform: scale(0.79);
        }
        100% {
            opacity: 0;
            transform: translateY(-102%);
        }
    }
}
