.game-rounds {
    position static
}

.game-round {
    position absolute
    top 0
    left 0
    right 0
    bottom 0


    &.entering {
        animation game-round-entering 0.4s ease-out

        @keyframes game-round-entering {
            0% {
                transform translateY(-110%) scale(0.79)
                opacity 0
            }

            to {
                transform none
                opacity 1
            }
        }
    }


    &.leaving {
        animation game-round-leaving 0.4s ease-in


        @keyframes game-round-leaving {
            0% {
                transform none
                opacity 1
            }

            to {
                transform translateY(110%) scale(0.79)
                opacity 0
            }
        }
    }


    .fighting-stage {
        z-index 0
    }

    .fighters {
        z-index 10
    }
    
    .game-round-status-block {
        z-index 90
    }
}
