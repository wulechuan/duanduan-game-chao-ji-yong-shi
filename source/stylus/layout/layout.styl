#app {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: auto;
    height: auto;
}

.ui-screen {
    position absolute
    top: 0
    left: 0
    width: 100%
    height 100%
}

.stage-background {
    position: absolute;
    z-index: 0;
}

.role-status-blocks {
    position: absolute;
    z-index: 90;
}

.stage-foreground {
    position: absolute;
    z-index: 10;
}